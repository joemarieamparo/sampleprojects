<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mindandinnovation.chatapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_speaker_notes_white_36dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_speaker_notes_white_36dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".screens.chat.ChatActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>